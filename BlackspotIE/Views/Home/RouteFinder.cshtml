@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hihi" id="sec-4f51">
    <div class="wui-content">
        <div class="wui-content-header">

            <div class="wui-side-menu-header" style="width: 220px;">
                <div>
                    <!-- <button class="route-btn">Plan a Route</button> -->
                    <nav class="route-tab">
                        <a href="/Home/Map/1">
                            <i class="fa fa-dot-circle-o"></i>
                            <span>
                                Black spots
                            </span>
                        </a>

                        <a class="active" href="#">
                            <i class="fa fa-map-signs"></i>
                            <span>
                                Route Planner
                            </span>
                        </a>
                    </nav>

                </div>
            </div>

        </div>
        <div class="wui-overlay">
            <!-- SEARCH BAR -->
            <input id="postcode" hidden />
            <input id="loc" hidden />
            <input id="sidefilter" value="" hidden />
            <input id="riskfilter" value="High risks!Mid risks!Low risks!" hidden />
            <div class="search-bar-overlay" id="searchWrapper">
                <div class="search-box">
                    <span class="box-title" data-hint="The algorithm finds the safest route which avoids as many black spots as possible within 50 tries." data-hintposition="top-right">Plan a safer route and avoid accident black spots for your trip in Victoria.</span>
                    <br />
                    <span class="box-prompt">I am going to...</span>
                    <div class="search-bar">
                        <form id="searchForm" name="searchForm" action="search" method="post" style="display: flex;flex-direction: column;">
                            <input id="startInput" name="startInput" class="addr" type="search" placeholder="From..." style="font-size: 16px;">
                            <div class="search-bar-results" id="search-bar1" style="display: none;"><ul class="result-list" id="result1" style="color:#7f7f7f;"></ul></div>
                            <input id="endInput" name="endInput" class="addr" type="search" placeholder="To..." style="font-size: 16px;">
                            <div class="search-bar-results" id="search-bar2" style="display: none;"><ul class="result-list" id="result2" style="color:#7f7f7f;"></ul></div>
                            <span class="box-prompt" id="errormsg" style="color:red"></span>

                        </form>
                        <a href="#carousel_d920" id="submitBtn" class="u-text-active-palette-1-dark-2 u-border-none u-btn u-btn-round u-button-style u-hover-palette-1-dark-2 u-palette-3-base u-radius-45 u-btn-1" style="margin-top: 20px; display: inline-flex;">Search</a>

                    </div>
                    <br />
                    <input id="start" class="locs" hidden />
                    <input id="end" class="locs" hidden />
                </div>

            </div>
        </div>
        <!-- TOOPTIP  -->
        <a href="#" class="wui-retry-trigger">
            <i class="fa fa-undo"></i>
            <span id="retry-btn-txt" style="padding-left: 10px;">Search Again</span>
        </a>
        @*<div class="con-tooltip bottom" id="help-tooltip-toggle">
            <a href="#" style="color: #fdfb5f;"><i class="fa fa-question"></i></a>
            <div class="tooltip ">
