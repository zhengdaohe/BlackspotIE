            </div>
        </div>*@
        <!-- JS will add toast notification here -->
        <section class="map_box_container">
            <!--MAP-->
            <div id='map'></div>
        </section>
        <div id="live-chat">
            <header class="clearfix">
                <h4 id="prompt"></h4>
                <span class="chat-message-counter" id="counter" style="display:none"></span>
            </header>
            <div class="chat">
                <div class="chat-history" id="listing">


                </div> <!-- end chat-history -->
            </div> <!-- end chat -->

        </div> <!-- end live-chat -->
        <!-- Map Legends -->
        <div id="legend" class="legend">
            <h4>Black Spot<br>Risks</h4>
            <div><span style="background-color: #fa1d15"></span>HIGH</div>
            <div><span style="background-color: #e2aa50"></span>MEDIUM</div>
        </div>
    </div>
</div>


@section Styles {
    <link rel="stylesheet" href="~/Content/nicepage.css" media="screen">
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css' rel='stylesheet' />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <link href="https://unpkg.com/intro.js/minified/introjs.min.css" rel="stylesheet" />

    <link href="~/Content/Route-Planner.css" rel="stylesheet" />
    <style type="text/css">
        .mapboxgl-popup {
            max-width: 500px;
        }

        .loader {
            position: relative;
            height: 40px;
            width: 40px;
            border-radius: 80px;
            border: 3px solid rgba(0,0,0, .7);
            top: 28%;
            top: -webkit-calc(50% - 21px);
            top: calc(50% - 421px);
            left: 35%;
            left: -webkit-calc(50% - 21px);
            left: calc(50% - 21px);
            -webkit-transform-origin: 50% 50%;
            transform-origin: 50% 50%;
            -webkit-animation: loader 0.75s linear infinite;
            animation: loader 0.75s linear infinite;
        }

            .loader:after {
                content: "";
                position: absolute;
                top: -5px;
                left: 20px;
                width: 11px;
                height: 11px;
                border-radius: 10px;
                background-color: #000;
            }

        @@-webkit-keyframes loader {
            0% {
                -webkit-transform: rotate(0deg);
            }

            100% {
                -webkit-transform: rotate(360deg);
            }
        }

        @@keyframes loader {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
}
